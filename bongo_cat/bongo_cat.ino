}

void loop() {
  display.clearDisplay();
  if(!digitalRead(BUTTON_A)) {
    display.drawBitmap(0, 0, epd_bitmap_right_down, 64, 64, 1);
  } else {
    display.drawBitmap(0, 0, epd_bitmap_right_up, 64, 64, 1);
  }
  if(!digitalRead(BUTTON_C)) {
    display.drawBitmap(0, 64, epd_bitmap_left_down, 64, 64, 1);
  } else {
    display.drawBitmap(0, 64, epd_bitmap_left_up, 64, 64, 1);
  }
  delay(10);
  yield();
  display.display();
}
